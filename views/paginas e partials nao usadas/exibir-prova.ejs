    <!--========== CONTENTS ==========-->
        <main>
            <!-- exibir-prova.ejs -->

            <h1><%= prova.nome %></h1>

            <form method="POST" action="/prova/<%= prova.id %>/responder">
            <ul>
                <% prova.Perguntas.forEach(pergunta => { %>
                <li>
                    <p><%= pergunta.pergunta %></p>
                    <input type="text" name="resposta_<%= pergunta.id %>" />
                </li>
                <% }); %>
            </ul>
            <button type="submit">Enviar Respostas</button>
            </form>

        </main>

